<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DoctorUserFragments.DoctorUserDischargePatientFragment">

    <TextView
        android:id="@+id/dischargingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discharging Patient"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:textSize="25dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/patientNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        app:layout_constraintTop_toBottomOf="@id/dischargingTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/patientNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Patient Name"
        app:layout_constraintTop_toBottomOf="@id/dischargingTitle"
        app:layout_constraintStart_toEndOf="@id/patientNameTitle"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/enterDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Date"
        app:layout_constraintTop_toBottomOf="@id/patientNameTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/enterDateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2022-6-29"
        app:layout_constraintTop_toBottomOf="@id/patientNameTitle"
        app:layout_constraintStart_toEndOf="@id/enterDateTitle"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/exitDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit Date"
        app:layout_constraintTop_toBottomOf="@id/enterDateTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/exitDateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2022-6-29"
        app:layout_constraintTop_toBottomOf="@id/enterDateTitle"
        app:layout_constraintStart_toEndOf="@id/exitDateTitle"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/recommendationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendation"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/exitDateInput"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/recommendationInput"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:inputType="text|textMultiLine"
        android:background="@drawable/inputtext_reg_design"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/recommendationTitle"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/dischargebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/submitbtn"
        android:backgroundTint="@color/blue"
        android:padding="5dp"
        android:text="Discharge"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancelbtn"
        app:layout_constraintTop_toBottomOf="@id/recommendationInput"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/submitbtn"
        android:padding="5dp"
        android:text="cancel"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/dischargebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommendationInput"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>