<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashFragment"
    android:background="@drawable/linear_gradient_color">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_noun_heart"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_path"/>

    <TextView
        android:id="@+id/hms_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUH"
        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:layout_constraintStart_toStartOf="@id/appLogo"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App"
        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:layout_constraintStart_toEndOf="@id/hms_title"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="23sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>