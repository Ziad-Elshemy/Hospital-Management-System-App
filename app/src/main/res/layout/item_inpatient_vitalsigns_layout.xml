<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/Time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/date_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/Time_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/bloodPressure_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/weight_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/pulseRate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulse Rate"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/bloodPressure_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/temprature_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temprature"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/pulseRate_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="250dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/respiratoryRate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raspiratory Rate"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/temprature_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="180dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/signature_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signature"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/respiratoryRate_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="180dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/comments_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/signature_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="180dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"/>


    <View
        android:id="@+id/HLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>



